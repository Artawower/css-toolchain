{
  "compilerOptions": {
    "target": "ESNext",
    "rootDir": "./src",
    "baseUrl": "./src",
    "module": "ESNext",
    "outDir": "dist",
    "removeComments": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "ts-node": {
    "transpileOnly": true,
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
